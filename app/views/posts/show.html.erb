

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>


  <strong>Pictures:</strong>
  <br>
    <div style="height: 400px; width: 600px; line-height:100px; text-align:center;">
      <%= image_tag(@post.images[0], :id => "img_main", :style => "max-height:400px; max-width: 600px;")%>
    </div>
  <br>

  <div style="height: 115px; width:600px; overflow-x:scroll; overflow-y:hidden; display:flex">
    <% (0...@post.images.count).each do |image| %>
        <div style="height: 100px; width: 100px; display:inline; line-height:100px; margin-left:3px; margin-right:3px; ">
          <%= image_tag(@post.images[image], :id => "img_preview_#{image}", :onClick => "displayMain(#{image})", :style => "max-height:100px; max-width: 100px; vertical-align:middle; cursor:pointer;")%>
        </div>
      <% end %>
  </div>


<p>
  <strong>Price:</strong>
  <%= @post.price %>
</p>

<p>
  <strong>User:</strong>
  <a href="../user/<%= @post.user.id%>"><%= @post.user.name %></a>
</p>

<p>
  <strong>Contact:</strong>
  <%= @post.user.phone %>
</p>

<%= display_show_post_links(@post) %>

<script>
  function displayMain (nr){
    var id = "img_preview_" + nr;
    document.getElementById("img_main").src = document.getElementById(id).src;
  }
</script>