

<h1>Posts</h1>
<%= search_form_for @q do |f| %>

 
  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><a href=<%= "/posts/"+post.id.to_s %>><%= image_tag url_for(post.images[0]), size: "159x103" %></a></td>
        <td style="text-decoration:none; vertical-align:top"><%= link_to post.title, post %> <br>
        <p><%= post.description %></p></td>
        <td><%= post.price %>â‚¬</td>
        <td><a href="../user/<%= post.user.id%>"><%= post.user.name %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
