

<h1>Posts</h1>
<%= search_form_for @q do |f| %>
  <%= f.search_field :title_cont %>
  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Preview</th>
      <th>Title/Description</th>
      <th>Price</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><div style="width: 180px; height:120px; line-height:120px; text-align:center;"><a href=<%= "/posts/"+post.id.to_s %> style="width:180px"><%= image_tag url_for(post.images[0]), :style => "max-height: 120px; max-width:180px; vertical-align:middle" %></a></div></td>
        <td style="text-decoration:none; vertical-align:top"><%= link_to post.title, post %> <br>
        <p><%= post.description %></p></td>
        <td><%= post.price %>â‚¬</td>
        <td><a href="../user/<%= post.user.id%>"><%= post.user.name %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
